# Development environment configuration
# Copy to .env and modify as needed

# Database
MONGODB_URL=mongodb://localhost:27017/materials_discovery
MONGODB_TEST_URL=mongodb://localhost:27017/materials_discovery_test

# Application
LOG_LEVEL=DEBUG
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Dashboard Configuration  
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Robot Configuration
ROBOT_SIMULATION_MODE=true
ROBOT_TIMEOUT=30

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Security
SECRET_KEY=dev-secret-key-change-in-production
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]

# Experiment Configuration
DEFAULT_BATCH_SIZE=5
MAX_CONCURRENT_EXPERIMENTS=3
EXPERIMENT_TIMEOUT=3600

# ML Model Configuration
MODEL_CACHE_SIZE=100
MODEL_UPDATE_FREQUENCY=10

# Logging
LOG_FILE=logs/materials_orchestrator.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=7