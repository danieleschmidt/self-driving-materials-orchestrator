# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=materials_discovery
MONGODB_TEST_DATABASE=materials_test

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_SECRET_KEY=your-secret-key-here-change-in-production

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501
DASHBOARD_DEBUG=true

# Robot Configuration
OPENTRONS_IP=192.168.1.100
OPENTRONS_PORT=31950
CHEMSPEED_PORT=/dev/ttyUSB0
ROBOT_SIMULATION=true

# Monitoring Configuration
PROMETHEUS_HOST=0.0.0.0
PROMETHEUS_PORT=9090
GRAFANA_HOST=0.0.0.0
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Development Configuration
DEBUG=true
LOG_LEVEL=INFO
TESTING=false

# Optimization Configuration
OPTIMIZATION_ENGINE=bayesian
ACQUISITION_FUNCTION=expected_improvement
BATCH_SIZE=5
MAX_ITERATIONS=100

# Safety Configuration
EMERGENCY_STOP_ENABLED=true
SAFETY_CHECK_INTERVAL=5
TEMPERATURE_LIMIT=350
PRESSURE_LIMIT=2.0

# External Services (Optional)
MATERIALS_PROJECT_API_KEY=your-mp-api-key
PUBCHEM_API_KEY=your-pubchem-key
SLACK_WEBHOOK_URL=your-slack-webhook
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-app-password

# AWS Configuration (for cloud deployment)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-west-2
S3_BUCKET=materials-orchestrator-data

# Performance Tuning
WORKER_PROCESSES=4
DATABASE_POOL_SIZE=20
CACHE_TTL=3600
MAX_CONCURRENT_EXPERIMENTS=10

# Development Flags
ENABLE_PROFILING=false
MOCK_ROBOTS=true
ENABLE_TELEMETRY=true
VERBOSE_LOGGING=false