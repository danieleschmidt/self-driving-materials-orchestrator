# Self-Driving Materials Orchestrator Environment Configuration
# Copy this file to .env and fill in your specific values

# =====================================
# DATABASE CONFIGURATION
# =====================================

# MongoDB connection string
# For local development: mongodb://localhost:27017/
# For production: mongodb://username:password@host:port/
MONGODB_URL=mongodb://localhost:27017/

# Database name for materials discovery data
MONGODB_DATABASE=materials_discovery

# =====================================
# ROBOT CONFIGURATION
# =====================================

# Opentrons robot configuration
OPENTRONS_ROBOT_IP=192.168.1.100
OPENTRONS_ROBOT_PORT=31950

# Chemspeed robot configuration
CHEMSPEED_PORT=/dev/ttyUSB0
CHEMSPEED_CONFIG_FILE=configs/chemspeed_synthesis.xml

# Generic robot timeouts (seconds)
ROBOT_CONNECTION_TIMEOUT=30
ROBOT_COMMAND_TIMEOUT=300

# =====================================
# INSTRUMENT CONFIGURATION
# =====================================

# X-Ray Diffraction (XRD) instrument
XRD_INSTRUMENT_IP=192.168.1.101
XRD_INSTRUMENT_PORT=5000

# UV-Vis Spectrometer
UVVIS_INSTRUMENT_IP=192.168.1.102
UVVIS_INSTRUMENT_PORT=8080

# Photoluminescence Spectrometer
PL_INSTRUMENT_IP=192.168.1.103
PL_INSTRUMENT_PORT=9090

# =====================================
# OPTIMIZATION CONFIGURATION
# =====================================

# Bayesian optimization settings
OPTIMIZATION_ENGINE=bayesian
ACQUISITION_FUNCTION=expected_improvement
SURROGATE_MODEL=gaussian_process

# Experiment planning parameters
MAX_EXPERIMENTS_PER_CAMPAIGN=1000
INITIAL_RANDOM_SAMPLES=10
CONVERGENCE_PATIENCE=20

# =====================================
# SAFETY CONFIGURATION
# =====================================

# Emergency stop configuration
EMERGENCY_STOP_ENABLED=true
SAFETY_CHECK_INTERVAL=5

# Temperature safety limits (Celsius)
MAX_TEMPERATURE=300
MIN_TEMPERATURE=15

# Pressure safety limits (bar)
MAX_PRESSURE=10
MIN_PRESSURE=0.5

# =====================================
# API CONFIGURATION
# =====================================

# FastAPI server configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# API security
API_SECRET_KEY=your-secret-key-here-change-in-production
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =====================================
# LOGGING CONFIGURATION
# =====================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=json

# Log file location
LOG_FILE=logs/orchestrator.log

# =====================================
# DASHBOARD CONFIGURATION
# =====================================

# Streamlit dashboard configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501

# Real-time update interval (seconds)
DASHBOARD_UPDATE_INTERVAL=5

# =====================================
# DEVELOPMENT CONFIGURATION
# =====================================

# Environment mode: development, testing, production
ENVIRONMENT=development

# Enable debug mode
DEBUG=true

# Enable hot reload for development
HOT_RELOAD=true

# =====================================
# SIMULATION CONFIGURATION
# =====================================

# Enable simulation mode (no real robots)
SIMULATION_MODE=false

# Simulation parameters
SIMULATION_NOISE_LEVEL=0.05
SIMULATION_FAILURE_RATE=0.02
SIMULATION_TIME_ACCELERATION=1000

# =====================================
# CLOUD CONFIGURATION
# =====================================

# Cloud storage configuration (optional)
CLOUD_STORAGE_PROVIDER=
CLOUD_STORAGE_BUCKET=
CLOUD_STORAGE_ACCESS_KEY=
CLOUD_STORAGE_SECRET_KEY=

# =====================================
# MONITORING CONFIGURATION
# =====================================

# Prometheus metrics endpoint
METRICS_ENABLED=true
METRICS_PORT=9090

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =====================================
# NOTIFICATION CONFIGURATION
# =====================================

# Email notifications
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# Slack notifications (optional)
SLACK_WEBHOOK_URL=

# =====================================
# BACKUP CONFIGURATION
# =====================================

# Automatic backup settings
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# =====================================
# SECURITY CONFIGURATION
# =====================================

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# SSL/TLS configuration
SSL_ENABLED=false
SSL_CERT_FILE=
SSL_KEY_FILE=

# =====================================
# EXPERIMENTAL FEATURES
# =====================================

# Enable experimental AI features
AI_EXPERIMENT_DESIGN=false
AI_LITERATURE_INTEGRATION=false

# Enable multi-lab coordination
MULTI_LAB_ENABLED=false
LAB_ID=lab_001