{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Materials Orchestrator CLI",
      "type": "python",
      "request": "launch",
      "module": "materials_orchestrator.cli",
      "args": ["--help"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Run Campaign",
      "type": "python",
      "request": "launch",
      "module": "materials_orchestrator.cli",
      "args": ["campaign", "band_gap", "--material-system", "perovskites"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Dashboard",
      "type": "python",
      "request": "launch",
      "module": "materials_orchestrator.cli",
      "args": ["dashboard"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Debug Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["${workspaceFolder}/tests", "-v"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Debug Single Test",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v"],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}