# Production Environment Configuration for Materials Orchestrator
# Copy this file to .env and fill in the values

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
VERSION=0.1.0
BUILD_DATE=
VCS_REF=

# Security
API_SECRET_KEY=your-super-secret-key-change-this-in-production
GRAFANA_SECRET_KEY=another-super-secret-key-change-this-too

# Database Credentials
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=change-this-mongodb-root-password
MONGODB_USERNAME=materials_user
MONGODB_PASSWORD=change-this-mongodb-user-password

# Redis
REDIS_PASSWORD=change-this-redis-password

# PostgreSQL (for Grafana)
POSTGRES_USER=grafana
POSTGRES_PASSWORD=change-this-postgres-password

# Grafana
GRAFANA_ADMIN_PASSWORD=change-this-grafana-admin-password

# Paths (adjust for your deployment)
DATA_PATH=./data
LOGS_PATH=./logs
CONFIGS_PATH=./configs

# Backup Settings
BACKUP_INTERVAL=24h
BACKUP_RETENTION=30

# SSL/TLS (if using HTTPS)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Monitoring
PROMETHEUS_RETENTION=30d
GRAFANA_DATABASE_TYPE=postgres

# Email Alerts (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=

# Resource Limits
MAX_CONCURRENT_EXPERIMENTS=10
MAX_QUEUE_SIZE=100
CACHE_SIZE_MB=1024

# Feature Flags
ENABLE_ML_ACCELERATION=true
ENABLE_AUTO_SCALING=true
ENABLE_SECURITY_AUDIT=true
ENABLE_HEALTH_MONITORING=true

# External Integrations
EXTERNAL_API_ENDPOINT=
EXTERNAL_API_KEY=

# Lab Hardware Configuration
ROBOT_CONNECTION_TIMEOUT=30
INSTRUMENT_RETRY_COUNT=3
EXPERIMENT_TIMEOUT=3600
